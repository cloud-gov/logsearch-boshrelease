---
name: elastalert2

description: This job runs ElastAlert2 for alerting

packages:
  - elastalert2
  - python3

templates:
  bin/elastalert2.sh: bin/elastalert2.sh
  bin/pre-start: bin/pre-start.erb
  config/bpm.yml.erb: config/bpm.yml
  config/config.yaml.erb: config/config.yaml

consumes:
- name: elasticsearch
  type: elasticsearch

properties:
  elastalert2.elasticsearch.host:
    description: "IP address of elasticsearch master to send elasticsearch requests to"
    default: "127.0.0.1"
  elastalert2.elasticsearch.port:
    description: "Port of elasticsearch master to send elasticsearch requests to"
    default: "9200"